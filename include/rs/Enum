#ifndef RS_ENUM_
#define RS_ENUM_

namespace rs {

	// robot forms
	enum Form {
		DOF,
		LINKBOTI,
		LINKBOTL,
		LINKBOTT,
		NXT,
		EV3,
		ROBOT,
		NUM_TYPES
	};

	// drawing objects (ground and graphic)
	enum Drawing {
		BOX,
		CYLINDER,
		DOT,
		HACKYSACK,
		LINE,
		SPHERE,
		TEXT,
		WOODBLOCK
	};

	// orientation
	enum Orientation {
		RIGHT,
		UP,
		LEFT,
		DOWN
	};

	// levels for simulation
	namespace Level {
		enum Levels {
			None,
			ActivityMat,
			Board,
			Outdoors,
			Num_Levels
		};
	} // namespace Level

	// all images to load for each level
	enum Images {
		FRONT,
		LEFTSIDE,
		BACK,
		RIGHTSIDE,
		TOP,
		BOTTOM,
		GROUND,
		NUM_IMAGES
	};

} // namespace rs

#endif // RS_ENUM_

