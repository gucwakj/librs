#ifndef RS_ENUM_
#define RS_ENUM_

namespace rs {

	// robot forms
	enum Form {
		Dof,
		EV3,
		LinkbotI,
		LinkbotL,
		LinkbotT,
		NXT,
		Robot,
		Num_Types
	};

	// drawing objects (ground and graphic)
	enum Drawing {
		Box,
		Circle,
		CompetitionBorder,
		Cylinder,
		Dot,
		HackySack,
		Line,
		PullupBar,
		Rectangle,
		Sphere,
		Text,
		Triangle,
		WoodBlock
	};

	// orientation
	enum Orientation {
		Right,
		Up,
		Left,
		Down
	};

	// levels for simulation
	namespace Level {
		enum Levels {
			None,
			ActivityMat,
			Board,
			Outdoors,
			RPC2014,
			RPC2015,
			RPC2016,
			Num_Levels
		};
	} // namespace Level

	// all images to load for each level
	enum Images {
		Front,
		LeftSide,
		Back,
		RightSide,
		Top,
		Bottom,
		Ground,
		Num_Images
	};

} // namespace rs

#endif // RS_ENUM_

