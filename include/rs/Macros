#ifndef RS_MACROS_
#define RS_MACROS_

namespace rs {

	inline double D2R(double x) { return (x * 0.0174532925199433); }
	inline double R2D(double x) { return (x * 57.295779513082321); }

	const double Epsilon = 0.0000001;
	const double Pi = 3.14159265358979323846;

} // namespace rs

#ifdef _WIN32
#include <windows.h>
#include <Shlobj.h>
#include <Shlwapi.h>
#define LIBRSEXPORT __declspec(dllexport)
#define RS_WIN32
#endif

#ifdef _WIN64
#define RS_WIN64
#endif

#ifdef __linux__
#include <unistd.h>
#define LIBRSEXPORT
#define RS_UNIX
#endif

#ifdef __APPLE__
#include <unistd.h>
#define LIBRSEXPORT
#define RS_MAC
#endif

#endif // RS_MACROS_

