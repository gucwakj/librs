#ifndef RS_MACROS_
#define RS_MACROS_

namespace rs {

	inline double D2R(double x) { return (x * 0.0174532925199433); }
	inline double R2D(double x) { return (x * 57.295779513082321); }

	static double EPSILON = 0.0000001;

} // namespace rs

#ifdef _WIN32
#define DLLIMPORT __declspec(dllexport)
#else
#define DLLIMPORT
#endif // _WIN32

#endif // RS_MACROS_

