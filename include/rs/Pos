#ifndef RS_POS_
#define RS_POS_

#include <rs/Macros>

namespace rs {

	// class
	class LIBRSEXPORT Pos {
		// public functions
		public:
			Pos(void);
			Pos(float, float, float);
			Pos(const Pos&);

			const Pos add(float, float, float);
			const Pos add(const Pos&);

			// output
			void print(const char* = "P");
			void print(const char* = "P") const;

			// access operators
			inline float& operator[](int i) { return _v[i]; }
			inline float& x() { return _v[0]; }
			inline float& y() { return _v[1]; }
			inline float& z() { return _v[2]; }
			inline float operator[](int i) const { return _v[i]; }
			inline float x() const { return _v[0]; }
			inline float y() const { return _v[1]; }
			inline float z() const { return _v[2]; }

		// private data
		private:
			float _v[3];
	};

} // namespace rs

#endif // RS_POS_

