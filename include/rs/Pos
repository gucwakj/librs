#ifndef RS_POS_
#define RS_POS_

#include <rs/Macros>

namespace rs {

	// class
	class LIBRSEXPORT Pos {
		// public functions
		public:
			Pos(void);
			Pos(double, double, double);
			Pos(const Pos&);

			const Pos add(double, double, double);
			const Pos add(const Pos&);

			// output
			void print(const char* = "P");
			void print(const char* = "P") const;

			// access operators
			inline double& operator[](int i) { return _v[i]; }
			inline double& x() { return _v[0]; }
			inline double& y() { return _v[1]; }
			inline double& z() { return _v[2]; }
			inline double operator[](int i) const { return _v[i]; }
			inline double x() const { return _v[0]; }
			inline double y() const { return _v[1]; }
			inline double z() const { return _v[2]; }

		// private data
		private:
			double _v[3];
	};

} // namespace rs

#endif // RS_POS_

