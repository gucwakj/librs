#ifndef RS_POS_
#define RS_POS_

#include <rs/Macros>

namespace rs {

	// class
	class LIBRSEXPORT Pos {
		// public functions
		public:
			Pos(float = 0, float = 0, float = 0);
			Pos(const Pos&);

			const Pos add(float, float, float);
			const Pos add(const Pos&);

			// output
			void print(const char* = "P");
			void print(const char* = "P") const;

			// access operators
			float& operator[](short s)		{ return _v[s]; }
			float operator[](short s) const	{ return _v[s]; }
			float& x()		{ return _v[0]; }
			float& y()		{ return _v[1]; }
			float& z()		{ return _v[2]; }
			float x() const	{ return _v[0]; }
			float y() const	{ return _v[1]; }
			float z() const	{ return _v[2]; }

		// private data
		private:
			float _v[3];
	};

} // namespace rs

#endif // RS_POS_

