#ifndef RS_QUAT_
#define RS_QUAT_

#include <rs/Macros>

namespace rs {

	// forward declare
	class Pos;

	// class
	class LIBRSEXPORT Quat {
		// public functions
		public:
			Quat(float = 0, float = 0, float = 0, float = 1);
			Quat(const Quat&);

			// multiply by vector
			const Pos multiply(const rs::Pos&);
			const Pos multiply(float, float, float) const;

			// multiply by quaternion
			const Quat multiply(const rs::Quat&);
			const Quat multiply(float, float, float, float);

			// output
			void print(const char* = "Q");
			void print(const char* = "Q") const;

			// access operators
			float& operator[](short s)       { return _v[s]; }
			float  operator[](short s) const { return _v[s]; }

		// private data
		private:
			float _v[4];
	};

} // namespace rs

#endif // RS_QUAT_

