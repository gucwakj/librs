#ifndef RS_QUAT_
#define RS_QUAT_

#include <rs/Macros>

namespace rs {

	// forward declare
	class Pos;

	// class
	class LIBRSEXPORT Quat {
		// public functions
		public:
			Quat(void);
			Quat(float, float, float, float);
			Quat(const Quat&);

			// multiply by vector
			const Pos multiply(const rs::Pos&);
			const Pos multiply(float, float, float) const;

			// multiply by quaternion
			const Quat multiply(const rs::Quat&);
			const Quat multiply(float, float, float, float);

			// output
			void print(const char* = "Q");
			void print(const char* = "Q") const;

			// access operators
			inline float& operator[](int i)       { return _v[i]; }
			inline float  operator[](int i) const { return _v[i]; }

		// private data
		private:
			float _v[4];
	};

} // namespace rs

#endif // RS_QUAT_

