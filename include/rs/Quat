#ifndef RS_QUAT_
#define RS_QUAT_

#include <rs/Macros>

namespace rs {

	// forward declare
	class Pos;

	// class
	class LIBRSEXPORT Quat {
		// public functions
		public:
			Quat(void);
			Quat(double, double, double, double);
			Quat(const Quat&);

			// multiply by vector
			const Pos multiply(const rs::Pos&);
			const Pos multiply(double, double, double) const;

			// multiply by quaternion
			const Quat multiply(const rs::Quat&);
			const Quat multiply(double, double, double, double);

			// output
			void print(const char* = "Q");
			void print(const char* = "Q") const;

			// access operators
			inline double& operator[](int i) { return _v[i]; }
			inline double  operator[](int i) const { return _v[i]; }

		// private data
		private:
			double _v[4];
	};

} // namespace rs

#endif // RS_QUAT_

