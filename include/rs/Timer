#ifndef RS_TIMER_
#define RS_TIMER_

#include <ctime>

#include <rs/Macros>

namespace rs {

	// class
	class LIBRSEXPORT Timer {
		// public functions
		public:
			Timer(int);
			~Timer(void);

			unsigned int delta(void);
			unsigned int now(void);
			void sleep(unsigned int);

		// public enumerations
		public:
			enum Units {
				Seconds,
				MilliSeconds,
				MicroSeconds,
				NanoSeconds
			};

		// private data
		private:
			int _units;
			unsigned int _last;
			unsigned int _now;
	};

} // namespace rs

#endif // RS_TIMER_

