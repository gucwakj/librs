#ifndef RS_VEC_
#define RS_VEC_

#include <rs/Macros>

#include <vector>

namespace rs {

	// class
	class LIBRSEXPORT Vec {
		// public functions
		public:
			Vec(void) {};
			Vec(short);
			Vec(float);
			Vec(float, float);
			Vec(float, float, float);
			Vec(float, float, float, float);
			Vec(const Vec&);
			~Vec(void) {};

			void allocate(int);
			void print(const char* = "V");
			void print(const char* = "V") const;
			unsigned int size(void) const { return _v.size(); };

			// access operators
			inline float& operator[](int i)	      { return _v[i]; }
			inline float  operator[](int i) const { return _v[i]; }

		// private data
		private:
			std::vector<float> _v;
	};

} // namespace rs

#endif // RS_VEC_

