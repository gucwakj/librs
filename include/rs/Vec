#ifndef RS_VEC_
#define RS_VEC_

#include <vector>

namespace rs {

	// vector class
	class Vec {
		public:
			Vec(void);
			Vec(int);
			Vec(double, double);
			Vec(double, double, double);
			Vec(double, double, double, double);
			Vec(const Vec&);
			~Vec(void);

			void add(double);
			void allocate(int);
			void print(void);
			int size(void) const;

			// access operators
			inline double& operator[](int i) { return _v[i]; }
			inline double  operator[](int i) const { return _v[i]; }

		private:
			std::vector<double> _v;
	};

} // namespace rs

#endif // RS_VEC_

