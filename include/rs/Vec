#ifndef RS_VEC_
#define RS_VEC_

#include <rs/Macros>

#include <vector>

namespace rs {

	// class
	class LIBRSEXPORT Vec {
		// public functions
		public:
			Vec(void);
			Vec(int);
			Vec(double);
			Vec(double, double);
			Vec(double, double, double);
			Vec(double, double, double, double);
			Vec(const Vec&);
			~Vec(void);

			void add(double);
			void allocate(int);
			void print(const char* = "V");
			void print(const char* = "V") const;
			unsigned int size(void) const;

			// access operators
			inline double& operator[](int i) { return _v[i]; }
			inline double  operator[](int i) const { return _v[i]; }

		// private data
		private:
			std::vector<double> _v;
	};

} // namespace rs

#endif // RS_VEC_

