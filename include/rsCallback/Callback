#ifndef RSCALLBACK_CALLBACK_
#define RSCALLBACK_CALLBACK_

#include <rsScene/Scene>
#include <rsSim/Sim>

namespace rsCallback {

	// class
	class Callback {
		// public functions
		public:
			Callback(void);
			virtual ~Callback(void) {};

			void attachCallback(rsScene::Obstacle*, rsSim::Obstacle*);
			void attachCallback(rsScene::Robot*, rsSim::Robot*, rsSim::BodyList&);
			void attachCallback(rsScene::Robot*, rsSim::Robot*, rsSim::BodyList&, rsSim::ConnectorList&);

			void setUnits(bool);

		// private data
		private:
			bool _units;
	};

} // namespace rsCallback

#endif // RSCALLBACK_CALLBACK_

