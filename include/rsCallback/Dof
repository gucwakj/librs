#ifndef RSCALLBACK_DOF_
#define RSCALLBACK_DOF_

#include <rsCallback/ModularRobot>
#include <rsSim/Dof>

namespace rsCallback {

	// class
	class LIBRSEXPORT Dof : public rsCallback::ModularRobot {
		// public functions
		public:
			Dof(void) {};
			virtual ~Dof(void) {};

			virtual void setCallbackParams(rsSim::ModularRobot*, rsSim::BodyList&, rsSim::ConnectorList&, bool);
			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			rsSim::Dof *_robot;
	};

} // namespace rsCallback

#endif // RSCALLBACK_DOF_

