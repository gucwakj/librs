#ifndef RSCALLBACK_DOF_
#define RSCALLBACK_DOF_

#include <osg/Node>
#include <osg/NodeVisitor>

#include <rsSim/Dof>

namespace rsCallback {

	// class
	class LIBRSEXPORT Dof: public osg::NodeCallback {
		// public functions
		public:
			Dof(rsSim::Dof*, rsSim::BodyList&, rsSim::ConnectorList&, bool);
			virtual ~Dof(void) {};

			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			bool _units;
			int _count;
			rsSim::Dof *_robot;
			rsSim::BodyList _bodies;
			rsSim::ConnectorList _conn;
	};

} // namespace rsCallback

#endif // RSCALLBACK_DOF_

