#ifndef RSCALLBACK_LINKBOT_
#define RSCALLBACK_LINKBOT_

#include <rsCallback/ModularRobot>
#include <rsSim/Linkbot>

namespace rsCallback {

	// class
	class LIBRSEXPORT Linkbot : public rsCallback::ModularRobot {
		// public functions
		public:
			Linkbot(void) {};
			virtual ~Linkbot(void) {};

			virtual void setCallbackParams(rsSim::ModularRobot*, rsSim::BodyList&, rsSim::ConnectorList&, bool);
			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			rsSim::Linkbot *_robot;
	};

} // namespace rsCallback

#endif // RSCALLBACK_LINKBOT_

