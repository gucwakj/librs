#ifndef RSCALLBACK_LINKBOTCALLBACK_
#define RSCALLBACK_LINKBOTCALLBACK_

#include <osg/Node>
#include <osg/NodeVisitor>

#include <rsSim/Linkbot>

namespace rsCallback {

	// class
	class LIBRSEXPORT LinkbotCallback : public osg::NodeCallback {
		// public functions
		public:
			LinkbotCallback(rsSim::Linkbot*, rsSim::BodyList&, rsSim::ConnectorList&, bool);
			virtual ~LinkbotCallback(void) {};

			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			bool _units;
			int _count;
			rsSim::Linkbot *_robot;
			rsSim::BodyList _bodies;
			rsSim::ConnectorList _conn;
	};

} // namespace rsCallback

#endif // RSCALLBACK_LINKBOTCALLBACK_

