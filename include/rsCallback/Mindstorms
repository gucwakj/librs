#ifndef RSCALLBACK_MINDSTORMS_
#define RSCALLBACK_MINDSTORMS_

#include <osg/Node>
#include <osg/NodeVisitor>

#include <rsSim/Mindstorms>

namespace rsCallback {

	// class
	class LIBRSEXPORT Mindstorms: public osg::NodeCallback {
		// public functions
		public:
			Mindstorms(rsSim::Mindstorms*, rsSim::BodyList&, bool);
			virtual ~Mindstorms(void) {};

			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			bool _units;
			int _count;
			rsSim::Mindstorms *_robot;
			rsSim::BodyList _bodies;
	};

} // namespace rsCallback

#endif // RSCALLBACK_MINDSTORMS_

