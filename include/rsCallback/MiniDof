#ifndef RSCALLBACK_MINIDOF_
#define RSCALLBACK_MINIDOF_

#include <rsCallback/ModularRobot>
#include <rsSim/MiniDof>

namespace rsCallback {

	// class
	class LIBRSEXPORT MiniDof : public rsCallback::ModularRobot {
		// public functions
		public:
			MiniDof(void) {};
			virtual ~MiniDof(void) {};

			virtual void setCallbackParams(rsSim::ModularRobot*, rsSim::BodyList&, rsSim::ConnectorList&, bool);
			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			rsSim::MiniDof *_robot;
	};

} // namespace rsCallback

#endif // RSCALLBACK_MINIDOF_

