#ifndef RSCALLBACK_OBSTACLE_
#define RSCALLBACK_OBSTACLE_

#include <osg/Node>
#include <osg/NodeVisitor>

#include <rsSim/Sim>

namespace rsCallback {

	// class
	class LIBRSEXPORT Obstacle: public osg::NodeCallback {
		// public functions
		public:
			Obstacle(rsSim::Obstacle*);
			virtual ~Obstacle(void) {};

			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			rsSim::Obstacle *_obstacle;
	};

} // namespace rsCallback

#endif // RSCALLBACK_OBSTACLE_

