#ifndef RSRESEARCH_PUBLISHER_
#define RSRESEARCH_PUBLISHER_

#include <string>
#include <vector>

#include <rs/Macros>

namespace rsResearch {

	// class
	class LIBRSEXPORT Publisher {
		// public functions
		public:
			Publisher(short, std::string);
			virtual ~Publisher(void);

			void addMessage(short);
			short send(short id, const char*, ...);

		// private data
		private:
			short _port;					// base message port
			std::string _prefix;			// message prefix
			std::vector<void*> _context;	// zmq context
			std::vector<void*> _socket;		// zmq prefix
	};

} // namespace rsResearch

#endif // RSRESEARCH_PUBLISHER_

