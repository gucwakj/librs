#ifndef RSRESEARCH_REPLIER_
#define RSRESEARCH_REPLIER_

#include <string>
#include <vector>

#include <rs/Macros>

namespace rsResearch {

	// class
	class LIBRSEXPORT Replier {
		// public functions
		public:
			Replier(short, short = 0);
			virtual ~Replier(void);

			short addMessage(short);
			short reply(short, const char*, ...);

		// private data
		private:
			short _port;					// base message port
			std::vector<void*> _context;	// zmq context
			std::vector<void*> _socket;		// zmq prefix
	};

} // namespace rsResearch

#endif // RSRESEARCH_REPLIER_

