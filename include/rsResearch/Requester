#ifndef RSRESEARCH_REQUESTER_
#define RSRESEARCH_REQUESTER_

#include <string>
#include <vector>

#include <rs/Macros>

namespace rsResearch {

	// class
	class LIBRSEXPORT Requester {
		// public functions
		public:
			Requester(std::string, short, short = 0);
			virtual ~Requester(void);

			short addMessage(short);
			short request(short, const char*, ...);

		// private data
		private:
			short _port;					// base message port
			std::string _ip;				// base ip address
			std::vector<void*> _context;	// zmq context
			std::vector<void*> _socket;		// zmq prefix
	};

} // namespace rsResearch

#endif // RSRESEARCH_REQUESTER_

