#ifndef RSRESEARCH_SUBSCRIBER_
#define RSRESEARCH_SUBSCRIBER_

#include <string>
#include <vector>

#include <rs/Macros>

namespace rsResearch {

	// class
	class LIBRSEXPORT Subscriber {
		// public functions
		public:
			Subscriber(std::string, std::string, std::string, short);
			virtual ~Subscriber(void);

			short addMessage(short);
			short addSubscription(std::string, short, short = 0);
			short receive(short id, const char*, ...);
			short receiveRaw(char*, short, short = 0);

		// private data
		private:
			short _port;					// base message port
			std::vector<void*> _context;	// zmq context
			std::vector<void*> _socket;		// zmq prefix
			std::string _ip;				// base ip address
			std::string _prefix;			// message prefix
	};

} // namespace rsResearch

#endif // RSRESEARCH_SUBSCRIBER_

