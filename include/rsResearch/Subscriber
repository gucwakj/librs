#ifndef RSRESEARCH_SUBSCRIBER_
#define RSRESEARCH_SUBSCRIBER_

#include <string>

#include <rs/Macros>

namespace rsResearch {

	// class
	class LIBRSEXPORT Subscriber {
		// public functions
		public:
			Subscriber(std::string, std::string, std::string, short);
			virtual ~Subscriber(void);

			short addSubscription(std::string, short);
			short receive(const char*, ...);
			short receiveRaw(char*, short);

		// private data
		private:
			void *_context;			// zmq context
			void *_socket;			// zmq socket

			std::string _prefix;	// receiving filter prefix
	};

} // namespace rsResearch

#endif // RSRESEARCH_SUBSCRIBER_

