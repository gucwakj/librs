#ifndef RSROBOTS_MINDSTORMS_
#define RSROBOTS_MINDSTORMS_

#include <rsRobots/Robot>

namespace rsRobots {

	// class
	class LIBRSEXPORT Mindstorms : virtual public Robot {
		// public functions
		public:
			Mindstorms(int = rs::EV3);
			virtual ~Mindstorms(void) {};

			double getWheelRatio(int);
			double riseByWheels(int);
			const rs::Quat tiltForWheels(int, int, double&);

		// inherited functions
		public:
			virtual const rs::Quat getRobotBodyQuaternion(int, double, const rs::Quat&);

		// data
		protected:
			double _bigwheel_radius;
			double _smallwheel_radius;
	};

} // namespace rsRobots

#endif // RSROBOTS_MINDSTORMS_

