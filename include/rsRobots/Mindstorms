#ifndef RSROBOTS_MINDSTORMS_
#define RSROBOTS_MINDSTORMS_

#include <rsRobots/Robot>

namespace rsMindstorms {

	namespace Bodies {
		// parts
		enum Part {
			Body,
			Wheel1,
			Wheel2,
			Num_Parts
		};

		// joints
		enum Joint {
			Joint1,
			Joint2,
			Num_Joints
		};
	} // namespace Bodies

	namespace Connectors {
		// types
		enum Type {
			None,
			Big,
			Small,
			Num_Connectors
		};
	} // namespace Connectors

} // namespace rsMindstorms

namespace rsRobots {

	// class
	class LIBRSEXPORT Mindstorms : virtual public Robot {
		// public functions
		public:
			Mindstorms(int);
			virtual ~Mindstorms(void) {};

			const rs::Quat tiltForWheels(int, int, double&);

		// inherited functions
		public:
			virtual const rs::Quat getRobotBodyQuaternion(int, double, const rs::Quat&);
			virtual double getWheelRatio(int);

		// data
		protected:
			double _bigwheel_radius;
			double _smallwheel_radius;
	};

} // namespace rsRobots

#endif // RSROBOTS_MINDSTORMS_

