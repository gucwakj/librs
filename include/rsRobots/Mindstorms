#ifndef RSROBOTS_MINDSTORMS_HPP_
#define RSROBOTS_MINDSTORMS_HPP_

#include <rsRobots/Robot>

namespace rsRobots {

	// class
	class Mindstorms : virtual public Robot {
		// public functions
		public:
			Mindstorms(void);
			virtual ~Mindstorms(void) {};

		// inherited functions
		public:
			virtual void getRobotBodyPosition(int, double, const double*, const rs::Quat&, double*);
			virtual const rs::Quat getRobotBodyQuaternion(int, double, const rs::Quat&);
	};

} // namespace rsRobots

#endif // RSROBOTS_MINDSTORMS_HPP_

