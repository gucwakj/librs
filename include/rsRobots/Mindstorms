#ifndef RSROBOTS_MINDSTORMS_
#define RSROBOTS_MINDSTORMS_

#include <rsRobots/Robot>

namespace rsMindstorms {

	namespace Bodies {
		// parts
		enum Part {
			Body,
			Wheel1,
			Wheel2,
			Num_Parts
		};

		// joints
		enum Joint {
			Joint1,
			Joint2,
			Joint3,
			Joint4,
			Num_Joints
		};
	} // namespace Bodies

	namespace Connectors {
		// types
		enum Type {
			None,
			Big,
			Small,
			Num_Connectors
		};
	} // namespace Connectors

} // namespace rsMindstorms

namespace rsRobots {

	// class
	class LIBRSEXPORT Mindstorms : virtual public Robot {
		// public functions
		public:
			Mindstorms(short);
			virtual ~Mindstorms(void) {};

			const rs::Quat tiltForWheels(short, short, float&);

		// inherited functions
		public:
			virtual const rs::Quat getRobotBodyQuaternion(short, float, const rs::Quat&);
			virtual float getWheelRatio(short);

		// protected data
		protected:
			float _bigwheel_radius;
			float _smallwheel_radius;
	};

} // namespace rsRobots

#endif // RSROBOTS_MINDSTORMS_

