#ifndef RSROBOTS_MODULARROBOT_
#define RSROBOTS_MODULARROBOT_

#include <rsRobots/Robot>

namespace rsRobots {

	// class
	class LIBRSEXPORT ModularRobot : virtual public Robot {
		// public functions
		public:
			ModularRobot(void) : Robot(rs::Robot) { };
			virtual ~ModularRobot(void) { };

		// for inherited classes
		public:
			virtual const rs::Pos getConnBodyPosition(int, int, const rs::Pos&, const rs::Quat&) { return rs::Pos(); };
			virtual const rs::Pos getConnFacePosition(int, int, int, const rs::Pos&, const rs::Quat&) { return rs::Pos(); };
			virtual const rs::Pos getRobotFacePosition(int, const rs::Pos&, const rs::Quat&) { return rs::Pos(); };

			virtual const rs::Quat getConnBodyQuaternion(int, int, const rs::Quat&) { return rs::Quat(); };
			virtual const rs::Quat getConnFaceQuaternion(int, int, int, const rs::Quat&) { return rs::Quat(); };

		// data
		protected:
			double _conn_depth;
			double _conn_height;
			double _conn_radius;
	};

} // namepsace rsRobots

#endif // RSROBOTS_MODULARROBOT_

