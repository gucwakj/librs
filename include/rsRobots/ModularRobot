#ifndef RSROBOTS_MODULARROBOT_HPP_
#define RSROBOTS_MODULARROBOT_HPP_

#include <rsRobots/Robot>

namespace rsRobots {

	// class
	class ModularRobot : virtual public Robot {
		// public functions
		public:
			ModularRobot(void) : Robot(rs::ROBOT) {};
			virtual ~ModularRobot(void) {};

		// for inherited classes
		public:
			virtual void getConnBodyOffset(int, int, const double*, const double*, double*, double*) {};
			virtual void getConnFaceOffset(int, int, int, const double*, const double*, double*, double*) {};

			virtual void getRobotFacePosition(int, const double*, const rs::Quat&, double*) {};

		// data
		protected:
			double _conn_depth;
			double _conn_height;
			double _conn_radius;
	};

} // namepsace rsRobots

#endif // RSROBOTS_MODULARROBOT_HPP_

