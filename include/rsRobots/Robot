#ifndef RSROBOTS_ROBOT_HPP_
#define RSROBOTS_ROBOT_HPP_

#include <cmath>
#include <string>
#include <vector>

#include <rs/Enum>
#include <rs/Quat>
#include <rs/Types>

namespace rsRobots {

	// class
	class Robot {
		// public functions
		public:
			Robot(int);
			virtual ~Robot(void);

			int getForm(void);
			int getID(void);
			std::string getName(void);
			double* getRGB(void);
			void multiplyQbyV(const double*, double, double, double, double*);
			void multiplyQbyQ(const double*, const double*, double*);
			void setID(int);
			void setName(std::string);
			void setTrace(bool);

		// for inherited classes
		public:
			void getRobotBodyPosition(int, double, const double*, const rs::Quat&, double*) {};
			const rs::Quat getRobotBodyQuaternion(int, double, const rs::Quat&) {};

		// data
		protected:
			bool _trace;
			double _body_length;
			double _body_height;
			double _body_radius;
			double _body_width;
			double _radius;			// TODO: wtf this causes a segfault
			double _wheel_depth;
			double _wheel_radius;
			double _rgb[3];
			int _form;
			int _id;
			std::string _name;
			std::vector<rs::Vec3> _offset;
	};

} // namespace rsRobots

#endif // RSROBOTS_ROBOT_HPP_

