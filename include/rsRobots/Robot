#ifndef RSROBOTS_ROBOT_
#define RSROBOTS_ROBOT_

#include <cmath>
#include <string>
#include <vector>

#include <rs/Enum>
#include <rs/Pos>
#include <rs/Quat>
#include <rs/Vec>

namespace rsRobots {

	// class
	class Robot {
		// public functions
		public:
			Robot(int);
			virtual ~Robot(void);

			int getForm(void);
			int getID(void);
			std::string getName(void);
			double* getRGB(void);
			const rs::Pos getRobotBodyPosition(int, const rs::Pos&, const rs::Quat&);
			void setID(int);
			void setName(std::string);
			void setTrace(bool);

		// for inherited classes
		public:
			virtual const rs::Quat getRobotBodyQuaternion(int, double, const rs::Quat&) {};

		// data
		protected:
			bool _trace;
			double _body_length;
			double _body_height;
			double _body_radius;
			double _body_width;
			double _radius;			// TODO: wtf this causes a segfault
			double _wheel_depth;
			double _wheel_radius;
			double _rgb[3];
			int _form;
			int _id;
			std::string _name;
			std::vector<rs::Pos> _offset;
	};

} // namespace rsRobots

#endif // RSROBOTS_ROBOT_

