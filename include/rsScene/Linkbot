#ifndef RSSCENE_LINKBOT_
#define RSSCENE_LINKBOT_

#include <rsRobots/Linkbot>
#include <rsScene/ModularRobot>

extern osg::Node::NodeMask NOT_VISIBLE_MASK;
extern osg::Node::NodeMask VISIBLE_MASK;

namespace rsScene {

	// class
	class LIBRSEXPORT Linkbot : virtual public rsRobots::Linkbot, virtual public ModularRobot {
		// public functions
		public:
			Linkbot(int);
			virtual ~Linkbot(void);

			virtual void draw(Group*, const rs::Pos&, const rs::Quat&, const rs::Vec&, const rs::Vec&, bool);
			virtual void drawConnector(Group*, int, int, int, double, int, int);
	};

} // namespace rsScene

#endif // RSSCENE_LINKBOT_

