#ifndef RSSCENE_MINIDOF_
#define RSSCENE_MINIDOF_

#include <rsRobots/MiniDof>
#include <rsScene/ModularRobot>

extern osg::Node::NodeMask NOT_VISIBLE_MASK;
extern osg::Node::NodeMask VISIBLE_MASK;

namespace rsScene {

	// class
	class LIBRSEXPORT MiniDof : virtual public rsRobots::MiniDof, virtual public ModularRobot {
		// public functions
		public:
			MiniDof(int);
			virtual ~MiniDof(void);

			virtual void draw(Group*, const rs::Pos&, const rs::Quat&, const rs::Vec&, const rs::Vec&, bool);
			virtual void drawConnector(Group*, int, int, int, double, int, int);
	};

} // namespace rsScene

#endif // RSSCENE_MINIDOF_

