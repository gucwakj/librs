#ifndef RSSCENE_MODULARROBOT_
#define RSSCENE_MODULARROBOT_

#include <rsRobots/ModularRobot>
#include <rsScene/Robot>

namespace rsScene {

	// class
	class LIBRSEXPORT ModularRobot : virtual public rsRobots::ModularRobot, virtual public rsScene::Robot {
		// public functions
		public:
			ModularRobot(void) : rsRobots::Robot(rs::Robot) {};
			virtual ~ModularRobot(void) {};

			virtual void drawConnector(Group*, int, int, int, double, int, int, int = rs::Right) { return; };
	};

} // namepsace rsScene

#endif // RSSCENE_MODULARROBOT_

