#ifndef RSSCENE_OPENCVOPERATION_
#define RSSCENE_OPENCVOPERATION_

#include <osgViewer/ViewerEventHandlers>

#include <rs/Macros>

namespace rsScene {
	// forward declarations
	class Scene;

	class LIBRSEXPORT OpenCVOperation : public osgViewer::ScreenCaptureHandler::CaptureOperation {
		// public functions
		public:
			OpenCVOperation(Scene*);
			virtual void operator()(const osg::Image&, const unsigned int);

		// private data
		private:
			Scene *_scene;
			float _oldtheta;
	};

} // namespace rsScene

#endif // RSSCENE_OPENCVOPERATION_

