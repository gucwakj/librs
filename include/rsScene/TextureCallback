#ifndef RSSCENE_TEXTURECALLBACK_
#define RSSCENE_TEXTURECALLBACK_

#include <osg/Node>
#include <osg/NodeCallback>
#include <osg/NodeVisitor>
#include <osg/TexMat>
#include <osgUtil/CullVisitor>

#include <rs/Macros>

namespace rsScene {

	class LIBRSEXPORT TextureCallback : public osg::NodeCallback {
		// public functions
		public:
			TextureCallback(osg::TexMat &tm) : _texMat(tm) {};
			virtual ~TextureCallback(void) {};

			virtual void operator()(osg::Node*, osg::NodeVisitor*);

		// private data
		private:
			osg::TexMat& _texMat;
	};

} // namespace rsScene

#endif // RSSCENE_TEXTURECALLBACK_

