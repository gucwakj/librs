#ifndef RSSIM_SIM_
#define RSSIM_SIM_

#include <vector>

#include <rs/Enum>
#include <rs/Quat>
#include <rsSim/ModularRobot>
#include <rsSim/Robot>

#ifdef DO_RESEARCH
// gsl - integration
#include <gsl/gsl_errno.h>
#include <gsl/gsl_matrix.h>
#include <gsl/gsl_odeiv2.h>
#endif

namespace rsSim {

	// typedefs
	typedef dBodyID Obstacle;

	// class
	class LIBRSEXPORT Sim {
		// public functions
		public:
			Sim(bool, bool);
			virtual ~Sim(void);

			int addRobot(Robot*, int, const rs::Pos&, const rs::Quat&, const rs::Vec&, int = -1);
			int addRobot(Robot*, int, const rs::Pos&, const rs::Quat&, const rs::Vec&, const rs::Vec&, int = -1);
			int addRobot(ModularRobot*, int, Robot*, const rs::Vec&, int, int, int, int, int = rs::Right, int = -1);
			Obstacle* addObstacle(const rs::Pos&, const rs::Quat&, const rs::Vec&, double);
			Obstacle* addObstacle(const rs::Pos&, const rs::Quat&, const rs::Vec&, double, int);
			Obstacle* addObstacle(const rs::Pos&, const rs::Vec&, double);
			void beginSimulation(void);
			virtual int deleteRobot(int);
			void done(void);
			double getClock(void);
			int getCOR(double&, double&);
			void getCoM(double&, double&, double&);
			int getMu(double&, double&);
			bool getPause(void);
			Robot* getRobot(int);
			bool getRunning(void);
			double getStep(void);
			void mutexLock(int);
			void mutexUnlock(int);
			int pause(int);
			void run(int, void (*output)(void) = NULL, int interval = 0);
			int setCollisions(int);
			int setCOR(double, double);
#ifdef DO_RESEARCH
			int setCPG(int(*)(double, const double*, double*, void*), int, int, int, int);		// research
#endif
			int setMu(double, double);
			void start(void);
			void stop(void);

		// public enumerations
		public:
			enum Mutexes {
				AddRobot,
				PauseSimulation,
				RunningSimulation
			};

		// private functions
		private:
			static void collision(void*, dGeomID, dGeomID);	// wrapper function for nearCallback to work in class
			static void* simulation_thread(void*);			// simulation thread function
#ifdef DO_RESEARCH
			const rs::Vec run_cpg_step(void);				// research: run cpg integration step
#endif

		// private variables
		private:
			struct RobotNode {
				rsSim::Robot *robot;
				THREAD_T thread;
			};

			bool _collision;					// flag: perform collisions
			bool _running;						// flag: simulation running
			bool _rt;							// flag: run in real time
			bool _pause;						// flag: paused
			double _clock;						// clock time of simulation
			double _friction[2];				// coefficient of friction [body/ground, body/body]
			double _restitution[2];				// coefficient of restitution [body/ground, body/body]
			double _step;						// time step of simulation
			double _stop;						// time to stop simulation
			dWorldID _world;					// ode: world
			dSpaceID _space;					// ode: space for robots
			dJointGroupID _group;				// ode: joint group
			std::vector<RobotNode> _robot;		// list: robots
			COND_T _running_cond;				// condition: actively running simulation
			MUTEX_T _clock_mutex;				// mutex: getting the clock
			MUTEX_T _pause_mutex;				// mutex: paused simulation
			MUTEX_T _robot_mutex;				// mutex: ground collisions
			MUTEX_T _running_mutex;				// mutex: actively running program
			MUTEX_T _step_mutex;				// mutex: getting the step value
			THREAD_T _simulation;				// thread: simulation
#ifdef DO_RESEARCH
			double _cpg_offset;					// research: initial time offset
			double _cpg_time;					// research: time of integration
			int _body_length;					// research: length of robot body
			int _cpg_form;						// research: form of robot shape
			int _cpg_robots;					// research: number of robots
			int _cpg_vars;						// research: number of variables
			std::vector<double> _cpg_array;		// research: array of values from cpg integration
			gsl_odeiv2_driver *_cpg_driver;		// research: driver of cpg integration
			gsl_odeiv2_system _cpg_sys;			// research: system of ode equations
#endif
	};

} // namespace rsSim

#endif // RSSIM_SIM_

