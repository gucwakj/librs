#ifndef RSXML_CONN_
#define RSXML_CONN_

#include <rs/Enum>
#include <rs/Macros>

namespace rsXML {

	// class
	class LIBRSEXPORT Conn {
		// public functions
		public:
			Conn(void);
			Conn(double, int, int, int, int, int, int, int, int = rs::Right);
			virtual ~Conn(void) {};

			double getSize(void);
			int getConn(void);
			int getFace1(void);
			int getFace2(void);
			int getOrientation(void);
			int getOrientation2(void);
			int getRobot(void);
			int getSide(void);
			int getType(void);
			void printDebug(void);

		// private data
		private:
			double _size;
			int _conn;
			int _face1;
			int _face2;
			int _orientation;
			int _orientation2;
			int _robot;
			int _side;
			int _type;
	};

} // namespace rsXML

#endif // RSXML_STORE_

