#ifndef RSXML_GROUND_
#define RSXML_GROUND_

namespace rsXML {

	// class
	class Ground {
		// public functions
		public:
			Ground(int);
			virtual ~Ground(void) {};

			double getAxis(void);
			double* getColor(void);
			int getConnect(void);
			double* getDimensions(void);
			int getForm(void);
			int getID(void);
			double getMass(void);
			double* getPosition(void);
			double* getQuaternion(void);
			void setAxis(double);
			void setColor(double, double, double, double);
			void setConnect(int);
			void setDimensions(double, double, double);
			void setID(int);
			void setMass(double);
			void setPosition(double, double, double);
			void setRotation(double, double, double);

		// private data
		private:
			double _axis;	// longitudinal axis
			double _c[4];	// color
			double _l[3];	// lengths
			double _mass;	// mass
			double _p[3];	// position
			double _q[4];	// quaternion
			int _connected;	// connected to sim/gui
			int _id;		// id
			int _type;		// type
	};

} // namespace rsXML

#endif // RSXML_GROUND_

