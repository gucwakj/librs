#ifndef RSXML_MARKER_
#define RSXML_MARKER_

#include <string>

#include <rs/Pos>
#include <rs/Quat>
#include <rs/Vec>

namespace rsXML {

	// class
	class LIBRSEXPORT Marker {
		// public functions
		public:
			Marker(int);
			virtual ~Marker(void) {};

			const rs::Vec getColor(void);
			int getConnect(void);
			const rs::Pos getEnd(void);
			int getID(void);
			const rs::Pos getStart(void);
			int getSize(void);
			int getForm(void);
			std::string getLabel(void);
			void setColor(double, double, double, double);
			void setConnect(int);
			void setEnd(double, double, double);
			void setID(int);
			void setLabel(std::string);
			void setSize(int);
			void setStart(double, double, double);

		// private data
		private:
			int _connected;	// connect to view
			int _id;		// id
			int _size;		// size of object
			int _type;		// type
			std::string _l;	// label
			rs::Pos _e;		// end position
			rs::Pos _s;		// start position
			rs::Vec _c;		// color
	};

} // namespace rsXML

#endif // RSXML_MARKER_

