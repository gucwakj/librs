#ifndef RSXML_MARKER_
#define RSXML_MARKER_

#include <string>

#include <rs/Pos>
#include <rs/Quat>
#include <rs/Vec>

namespace rsXML {

	// class
	class LIBRSEXPORT Marker {
		// public functions
		public:
			Marker(short);
			virtual ~Marker(void) {};

			const rs::Vec getColor(void);
			bool getConnect(void);
			const rs::Pos getEnd(void);
			const rs::Vec getFill(void);
			short getID(void);
			const rs::Pos getStart(void);
			short getSize(void);
			const rs::Pos getPoint(void);
			short getForm(void);
			std::string getLabel(void);
			void setColor(float, float, float, float);
			void setConnect(bool);
			void setEnd(float, float, float);
			void setFill(float, float, float, float);
			void setID(short);
			void setLabel(std::string);
			void setPoint(float, float);
			void setSize(short);
			void setStart(float, float, float);

		// private data
		private:
			bool _connected;	// connect to view
			short _id;			// id
			short _size;		// size of object
			short _type;		// type
			std::string _l;		// label
			rs::Pos _e;			// end position
			rs::Pos _p;			// data point
			rs::Pos _s;			// start position
			rs::Vec _c;			// color
			rs::Vec _f;			// fill
	};

} // namespace rsXML

#endif // RSXML_MARKER_

