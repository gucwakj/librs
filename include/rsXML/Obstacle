#ifndef RSXML_OBSTACLE_
#define RSXML_OBSTACLE_

#include <rs/Pos>
#include <rs/Quat>
#include <rs/Vec>

namespace rsXML {

	// class
	class LIBRSEXPORT Obstacle {
		// public functions
		public:
			Obstacle(int);
			virtual ~Obstacle(void) {};

			int getAxis(void);
			const rs::Vec getColor(void);
			int getConnect(void);
			const rs::Vec getDimensions(void);
			int getForm(void);
			int getID(void);
			double getMass(void);
			const rs::Pos getPosition(void);
			const rs::Quat getQuaternion(void);
			void setAxis(int);
			void setColor(double, double, double, double);
			void setConnect(int);
			void setDimensions(double, double, double);
			void setID(int);
			void setMass(double);
			void setPosition(double, double, double);
			void setRotation(double, double, double);

		// private data
		private:
			int _axis;		// longitudinal axis
			double _mass;	// mass
			int _connected;	// connected to sim/gui
			int _id;		// id
			int _type;		// type
			rs::Pos _p;		// position
			rs::Quat _q;	// quaternion
			rs::Vec _c;		// color
			rs::Vec _l;		// lengths
	};

} // namespace rsXML

#endif // RSXML_OBSTACLE_

