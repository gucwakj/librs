#ifndef RSXML_OBSTACLE_
#define RSXML_OBSTACLE_

#include <rs/Pos>
#include <rs/Quat>
#include <rs/Vec>

namespace rsXML {

	// class
	class LIBRSEXPORT Obstacle {
		// public functions
		public:
			Obstacle(short);
			virtual ~Obstacle(void) {};

			short getAxis(void);
			const rs::Vec getColor(void);
			bool getConnect(void);
			const rs::Vec getDimensions(void);
			short getForm(void);
			short getID(void);
			float getMass(void);
			const rs::Pos getPosition(void);
			const rs::Quat getQuaternion(void);
			void setAxis(short);
			void setColor(float, float, float, float);
			void setConnect(bool);
			void setDimensions(float, float, float);
			void setID(int);
			void setMass(float);
			void setPosition(float, float, float);
			void setRotation(float, float, float);
			void setRotation(float, float, float, float);

		// private data
		private:
			bool _connected;	// connected to sim/gui
			float _mass;		// mass
			short _axis;		// longitudinal axis
			short _id;			// id
			short _type;		// type
			rs::Pos _p;			// position
			rs::Quat _q;		// quaternion
			rs::Vec _c;			// color
			rs::Vec _l;			// lengths
	};

} // namespace rsXML

#endif // RSXML_OBSTACLE_

