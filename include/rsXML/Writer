#ifndef RSXML_WRITER_
#define RSXML_WRITER_

#include <string>
#include <vector>

#include <tinyxml2.h>

#include <rsXML/Robot>

namespace rsXML {

	// class
	class Writer {
		// public functions
		public:
			Writer(std::string, const std::string&);
			virtual ~Writer(void);

			void addRobot(int, int, double*, double*, double*, double*);
			tinyxml2::XMLElement* getOrCreateElement(const char*, const char*);
			tinyxml2::XMLElement* getRobot(int);
			void setGrid(bool, std::vector<double>);
			void setTrace(bool);
			tinyxml2::XMLText* toText(bool);

		// private functions
		private:
			void save(void);

		// private data
		private:
			std::string _path;
			tinyxml2::XMLDocument _doc;
	};

} // namespace rsXML

#endif // RSXML_WRITER_

